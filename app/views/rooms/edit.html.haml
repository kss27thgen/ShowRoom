%h2 編集
= form_for @room do |f|

  .field
    = f.label :名前
    %br
    = f.text_field :name
  .field
    = f.label :カテゴリー
    %br
    = f.select :category, Room.categories.keys
  .field
    = f.label :本文
    %br
    = f.text_area :description
  .field
    = f.label :"設備(列挙)"
    %br
    = f.text_area :facility
  %field
    = f.label :画像　
    %br
    = f.fields_for :room_images,@room.room_images.build do|i|
      = i.file_field :image
  .field
    = f.label :間取り
    %br
    = f.select :room_type, Room.room_types.keys
  .field
    = f.label :築年
    %br
    = f.text_field :since
  .field
    = f.label :賃料
    %br
    = f.text_field :rent
  .field
    = f.label :面積
    %br
    = f.text_field :area
  .field
    = f.label :仲介会社
    %br
    = f.text_field :agent
  .field
    = f.label :区
    %br
    = f.select :ward, Room.wards.keys
  .field
    = f.label :郵便番号
    %br
    = f.text_field :zipcode
  .field
    = f.label :住所
    %br
    = f.text_field :address

  .actions
    = f.submit "post"


